<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textFontWeight="900"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/theme_title"
            android:text="@string/theme"
            android:textColor="@color/colorControlActivated"
            tools:ignore="UnusedAttribute"/>

    <HorizontalScrollView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          app:layout_constraintTop_toBottomOf="@id/theme_title">
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:id="@+id/theme_grp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"

                android:orientation="horizontal"
                android:gravity="center_vertical">

            <com.moses.miiread.widget.views.ATERadioButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="t1"
                    android:id="@+id/rbtn_1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/>

            <com.moses.miiread.widget.views.ATERadioButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="t2"
                    android:id="@+id/rbtn_2"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/>

            <com.moses.miiread.widget.views.ATERadioButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="t3"
                    android:id="@+id/rbtn_3"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/>

            <com.moses.miiread.widget.views.ATERadioButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="t4"
                    android:id="@+id/rbtn_4"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/>

            <com.moses.miiread.widget.views.ATERadioButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="t5"
                    android:id="@+id/rbtn_5"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/>

            <com.moses.miiread.widget.views.ATERadioButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="t6"
                    android:id="@+id/rbtn_6"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/>

            <com.moses.miiread.widget.views.ATERadioButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="t7"
                    android:id="@+id/rbtn_7"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/>

            <com.moses.miiread.widget.views.ATERadioButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="t8"
                    android:id="@+id/rbtn_8"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/>
        </RadioGroup>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>